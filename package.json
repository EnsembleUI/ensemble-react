{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,yaml,json}\"",
    "release": "turbo run build --filter='./packages/*' && changeset publish",
    "schema:generate": "ts-node --esm ./scripts/generateSchema.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "jest": "^27.5.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "27.1.5",
    "ts-json-schema-generator": "^1.5.0",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "turbo": "1.9.9"
  },
  "pnpm": {
    "overrides": {
      "typescript": "4.9.5"
    }
  },
  "name": "ensemble-react",
  "packageManager": "pnpm@6.32.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
